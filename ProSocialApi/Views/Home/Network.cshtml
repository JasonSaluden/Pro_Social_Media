@{
    ViewData["Title"] = "Mon Reseau";
}

<h2 class="mb-4"><i class="bi bi-people me-2"></i>Mon Reseau</h2>

<ul class="nav nav-tabs mb-4" id="networkTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="suggestions-tab" data-bs-toggle="tab"
                data-bs-target="#suggestions" type="button">Suggestions</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="connections-tab" data-bs-toggle="tab"
                data-bs-target="#connections" type="button">Mes connexions</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pending-tab" data-bs-toggle="tab"
                data-bs-target="#pending" type="button">En attente</button>
    </li>
</ul>

<div class="tab-content" id="networkTabsContent">
    <div class="tab-pane fade show active" id="suggestions" role="tabpanel">
        <div class="row" id="suggestions-container">
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status"></div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="connections" role="tabpanel">
        <div class="row" id="connections-container">
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status"></div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="pending" role="tabpanel">
        <div class="row" id="pending-container">
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/network.js"></script>
}
